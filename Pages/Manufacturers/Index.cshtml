@page
@model Shooting.Pages_Manufacturers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer[0].ManufacturerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer[0].Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer[0].Wiki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer[0].WebSite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Manufacturer) {
        <tr>
            <td>
                <a href="@item.WebSite">@item.ManufacturerName</a>
            </td>
            <td>
                <img src="@item.Logo" width="60px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wiki)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ManufacturerID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ManufacturerID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ManufacturerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
