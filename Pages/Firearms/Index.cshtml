<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].FirearmName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].Wiki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].LeftSide)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firearm[0].RightSide)
            </th>
